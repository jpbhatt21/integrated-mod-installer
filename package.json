{
	"name": "integrated-mod-installer",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc --noEmit && vite build",
		"build:prod": "NODE_ENV=production npm run build",
		"preview": "vite preview",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"clean": "rimraf dist .vite node_modules/.vite",
		"type-check": "tsc --noEmit",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:fix": "eslint src --ext .ts,.tsx --fix",
		"format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
		"py:dev": "echo 'Python server deprecated - image server now runs automatically with Tauri'",
		"py:install": "echo 'Python server deprecated - no longer needed'"
	},
